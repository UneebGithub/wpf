<Window x:Class="loginfull.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:loginfull"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="300" ResizeMode="NoResize">
    <Grid Background="Black">

        <Label Content="Forgot password" Foreground="White" FontSize="30" Margin="30,10,0,0" FontWeight="Bold"></Label>
        <Label Content="Enter New Password" Foreground="White" FontSize="20" Margin="50,160,0,0"></Label>
        <PasswordBox Width="200" Height="30" Margin="0,50,0,0" x:Name="password_new" FontSize="20"></PasswordBox>
        <Button Content="Submit" Width="100" FontWeight="Bold" Margin="0,140,0,0" Click="btn_new" Height="25"/>
    </Grid>
</Window>
